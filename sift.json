{
  "name": "sift-homebuyer",
  "display-name": "Homebuyer",
  "description": "Transform your Zoopla and Rightmove email alerts into your own personalized property price index.",
  "author": "Randal Pinto",
  "version": "1.0.0",
  "icon": "assets/icon.svg",
  "subtitle": "Your personalized property price index",
  "marketing": {
    "screenshots": [
      "assets/screenshot-0.png",
      "assets/screenshot-1.png",
      "assets/screenshot-2.png"
    ],
    "links": [
      {
        "label": "Github",
        "type": "github",
        "url": "https://github.com/redsift/sift-homebuyer"
      }
    ]
  },
  "interfaces": {
    "email": {
      "thread": {
        "controller": "dist/js/controller.umd-es2015.min.js"
      }
    },
    "summary": {
      "controller": "dist/js/controller.umd-es2015.min.js"
    }
  },
  "dag": {
    "inputs": {
      "emails": {
        "property-alerts": {
          "filter": {
            "conditions": [
              {
                "conditions": [
                  {
                    "from": {
                      "regexp": {
                        "pattern": "Zoopla Property [Alert]*",
                        "flags": "i"
                      }
                    }
                  },
                  {
                    "from": {
                      "regexp": {
                        "pattern": "Rightmove Property Alerts",
                        "flags": "i"
                      }
                    }
                  }
                ],
                "operator": "OR"
              },
              {
                "date": "between now and 9 months before now"
              }
            ],
            "operator": "AND"
          },
          "inMailbox": "all",
          "wants": [
            "archive",
            "strippedHtmlBody",
            "textBody"
          ]
        }
      }
    },
    "nodes": [
      {
        "#": "Map",
        "implementation": {
          "javascript": "server/map.js"
        },
        "input": {
          "bucket": "property-alerts"
        },
        "outputs": {
          "alerts": {},
          "tidList": {}
        }
      },
      {
        "#": "Reduce",
        "implementation": {
          "javascript": "server/reduce.js"
        },
        "input": {
          "bucket": "alerts",
          "select": "$month/*"
        },
        "outputs": {
          "indexes": {},
          "monthdistro": {},
          "monthlymean": {},
          "monthlyvolume": {}
        }
      }
    ],
    "stores": {
      "alerts": {
        "key$schema": "string/string"
      }
    },
    "outputs": {
      "exports": {
        "indexes": {
          "key$schema": "string"
        },
        "monthdistro": {
          "key$schema": "string"
        },
        "monthlymean": {
          "key$schema": "string"
        },
        "monthlyvolume": {
          "key$schema": "string"
        },
        "tidList": {
          "import": "_email.tid"
        }
      }
    }
  }
}
